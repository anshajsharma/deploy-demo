<!-- // posts map is passed -->
<link rel="stylesheet" href="style.css">
<h1>This is Posts Section</h1>

<% for(var i=0; i < posts.length ;i++) { %>
    <li><%=posts[i].title %> --- <strong> <%=posts[i].author %> </strong>  </li>  
<% } %>

<br>
<br><br><br>

<% posts.forEach(function(post){ %>
    <li><%=post.title %> --- <strong> 
        <%=post.author %> </strong>  
    </li>  
<% }) %>

<form action="/newpost" method="POST">
     <input type="text" name="title_of_post" placeholder="Title of post">
     <input type="text" name="author_name" placeholder="Author name">
     <button>Done</button>
</form>

<!-- forEach and for loop both will perform same things but I would prefer forEach -->